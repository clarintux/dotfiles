super + Return                  # terminal emulator
super + shift Return            # dropdown terminal
super + b                       # Internet Browser
super + v                       # Open url or search
super + n                       # File Manager
super + shift + n               # Dmenu filemanager
super + w                       # Change wallpaper
super + shift + ctrl +@space    # calculate
super + shift + @space          # edit configs
super + alt + @space            # play song
XF86AudioStop                   # stop
XF86AudioPlay                   # Toggle
XF86AudioPrev                   # Prev track
XF86AudioNext                   # Next track
ctrl + alt + l                  # Lock screen
Print                           # Screenshot
super + @space                  # Dmenu
super + shift + f               # Search file
super + ctrl + alt + @space     # YouTube
super + ctrl + @space           # Stardict
super + Escape                  # Reload shortcuts
super + alt + q                 # Quit
super + alt + r                 # Restart wm
super + plus                    # Increase gaps
super + minus                   # Decrease gaps
super + {_,shift + }q           # Close/kill
super + m                       # Monocle layout
super + {t,shift + t,s}         # tiles, pseudo_tiled, floating
super + f                       # Toggle fullscreen
super + d                       # Hide windows
super + ctrl + {m,x,y,z}        # marked, locked, sticky, private
super + {_,shift + }{h,j,k,l}   # focus window
super + {_,shift + }c           # Focus the Next/prev windows
ctrl + alt + {Left,Right}       # Next/prev desktop
ctrl + shift + alt + {Left,Right} # Send to the next/prev desktop
super + {_,shift + }{1-9,0}     # Focus the given desktop
super + ctrl + {h,j,k,l}        # Preselect the direction
super + alt + {h,j,k,l}         # Expand a window
super + alt + shift + {h,j,k,l} # Contract a window
