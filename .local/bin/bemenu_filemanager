#!/bin/sh

if [ -f $HOME/.config/bemenurc ]; then
  . $HOME/.config/bemenurc
else
  BEMENU='bemenu -i'
fi

selection=true
while [ "$selection" ]; do
    selection=$((echo ".." && ls -1 --group-directories-first) | $BEMENU -l 20 -p "Folder: $(basename "$(pwd)")")
    if [ -f "$selection" ]; then
        xdg-open "$selection" && exit
    elif [ -d "$selection" ]; then
        cd "$selection" || exit 1
    fi
done
