#!/bin/sh

if [ -f $HOME/.config/bemenurc ]; then
  . $HOME/.config/bemenurc
else
  BEMENU='bemenu -i'
fi

choice=$(echo -e "bash\nprofile\nzsh\nzprofile\nxinitrc\nvim\nalacritty\nbspwm\nsxhkd\nmpd\nncmpcpp\ndunst\nhyprland\nwaybar\nnewsboat" | $BEMENU -p Edit/Open:)

[[ ! $choice ]] && exit

case "$choice" in
  bash) $TERMINAL -e $EDITOR $HOME/.bashrc exit & ;;
  profile) $TERMINAL -e $EDITOR $HOME/.bash_profile exit & ;;
  zsh) $TERMINAL -e $EDITOR $HOME/.zshrc exit & ;;
  zprofile) $TERMINAL -e $EDITOR $HOME/.zprofile exit & ;;
  bspwm) $TERMINAL -e $EDITOR $HOME/.config/bspwm/bspwmrc exit & ;;
  mpd) $TERMINAL -e $EDITOR $HOME/.config/mpd/mpd.conf exit & ;;
  mutt) $TERMINAL -e $EDITOR $HOME/.config/neomutt/neomuttrc exit & ;;
  ncmpcpp) $TERMINAL -e $EDITOR $HOME/.config/ncmpcpp/config exit & ;;
  sxhkd) $TERMINAL -e $EDITOR $HOME/.config/sxhkd/sxhkdrc exit & ;;
  vim) $TERMINAL -e $EDITOR $HOME/.vimrc exit & ;;
  xinitrc) $TERMINAL -e $EDITOR $HOME/.xinitrc exit & ;;
  alacritty) $TERMINAL -e $EDITOR $HOME/.config/alacritty/alacritty.yml exit & ;;
  dunst) $TERMINAL -e $EDITOR $HOME/.config/dunst/dunstrc exit & ;;
  hyprland) $TERMINAL -e $EDITOR $HOME/.config/hypr/hyprland.conf exit & ;;
  waybar) $TERMINAL -e $EDITOR $HOME/.config/waybar/config exit & ;;
  newsboat) $TERMINAL -e $EDITOR $HOME/.config/newsboat/config exit & ;;
esac
