#!/bin/sh

INRES="1280x800"
OUTRES="1280x800"
FPS="30"

ffmpeg -f x11grab -s "$INRES" -r "$FPS" -i :0.0 -f alsa \
-i hw:0 -vcodec libx264 -s "$OUTRES" \
-acodec libmp3lame -ab 128k -ar 44100 \
-threads 0 -f flv $1

#ffmpeg -f x11grab -s "$INRES" -r "$FPS" -i :0.0 -f alsa -ac 1 \
#-i default -vcodec libx264 -s "$OUTRES" \
#-acodec libmp3lame -ab 128k -ar 44100 \
#-threads 0 -f flv $1
